<%= simple_form_for(video) do |f| %>

  <%= f.input :name_en %>
  <%= f.input :name_ar %>
  <%= f.input :youtube_id %>
  <%= f.association :channel %>
  <%= label_tag(:hidden, "Mark only if the video should not be available:") %>
  <%= f.check_box :hidden %>
  <br>

  <%= f.submit :class => "btn btn-primary" %>
<% end %>
