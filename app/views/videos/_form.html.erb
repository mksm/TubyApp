<%= simple_form_for(video) do |f| %>

  <%= f.input :name_en %>
  <%= f.input :name_ar %>
  <%= f.input :youtube_id %>
  <%= f.association :channel %>
  <%= label_tag(:hidden, "Mark if the video should be hidden from the App") %>
  <%= f.input :hidden %>
  <br>

  <%= f.submit :class => "btn btn-primary" %>
<% end %>
