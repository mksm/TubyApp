<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<%= link_to 'New Video', new_video_path %>

<%= link_to 'Upload CSV', upload_csv_videos_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Youtube</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.name %></td>
        <td><%= video.youtube_id %></td>
        <td><%= video.category.name %></td>
        <td><%= link_to 'Show', video %></td>
        <td><%= link_to 'Edit', edit_video_path(video) %></td>
        <td><%= link_to 'Delete', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
