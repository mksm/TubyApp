<p id="notice"><%= notice %></p>

<h1>Channels</h1>
<%= link_to 'New Channel', new_channel_path , class: "btn btn-default" %>

<table class="table">
  <thead>
    <tr>
      <th>Name (en)</th>
      <th>Name (ar)</th>
      <th>Youtube ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= link_to channel.name_en, edit_channel_path(channel) %></td>
        <td><%= channel.name_ar %></td>
        <td><%= channel.youtube_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
