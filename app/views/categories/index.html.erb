<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<%= link_to 'New Category', new_category_path, class: "btn btn-default" %>

<table class="table">
  <thead>
    <tr>
      <th>Name (en)</th>
      <th>Name (ar)</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, edit_category_path(category) %></td>
        <td><%= category.name_ar %></td>
      </tr>
    <% end %>
  </tbody>
</table>
